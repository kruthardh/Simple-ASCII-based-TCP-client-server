#!/usr/bin/python3

import socket		 	            
import sys

s = socket.socket(socket.AF_INET, socket.SOCK_STREAM)

from_user  = sys.argv[1]
split      = from_user.split(':')	  		    
host       = str(split[0])                     
port       = int(split[1])

s.bind((host, port)) 			    
s.listen(1)

print("Server is active")

while True:
     c, addr = s.accept() 		    
     print('GConnected to', addr)



