#!/usr/bin/python3

import socket		 	                      
import sys

s = socket.socket(socket.AF_INET, socket.SOCK_STREAM) 	  		              

from_user   = sys.argv[1]
split       = from_user.split(':')
host        = str(split[0])                           
port        = int(split[1])


s.connect((host, port))                           
                           
print("IP address :", host)
print("Port :", port)
