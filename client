#!/usr/bin/python3

import socket		 	                      
import sys

s = socket.socket(socket.AF_INET, socket.SOCK_STREAM) 	  		              

from_user   = sys.argv[1]
split       = from_user.split(':')
host        = str(split[0])                           
port        = int(split[1])


s.connect((host, port))                           
                           
print("Connected to :",from_user)


while(True):
        Y=(s.recv(1024).decode()).split()

        if Y[0] == "add":
            print ("Calculating .....")
            a = int(Y[1])+int(Y[2])
            s.send(str(a).encode())
            print("result is ", a )
            print("Returned the result to the server.")
            break
